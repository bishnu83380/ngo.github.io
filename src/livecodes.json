  "head": "<base href=\"https://cdn.jsdelivr.net/gh/bishnu83380/ngo-github-io@gh-pages/src/index.html\">\n<meta charset=\"UTF-8\" />\n<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />",
