  "markup": {
    "language": "html",
    "content": "<!doctype html>\r\n<html lang=\"en\">\r\n  <head>\r\n    <meta charset=\"UTF-8\" />\r\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\r\n    <meta\r\n      name=\"description\"\r\n      content=\"Hope NGO - Transforming lives through sustainable development and humanitarian aid.\"\r\n    />\r\n    <meta\r\n      name=\"keywords\"\r\n      content=\"NGO, charity, donation, sustainable development\"\r\n    />\r\n    <title>Hope NGO - Making a Difference</title>\r\n    <link\r\n      rel=\"stylesheet\"\r\n      href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css\"\r\n    />\r\n    <style>\r\n      * {\r\n        margin: 0;\r\n        padding: 0;\r\n        box-sizing: border-box;\r\n        font-family: \"Arial\", sans-serif;\r\n      }\r\n\r\n      /* Navbar Styles */\r\n      .navbar {\r\n        position: fixed;\r\n        width: 100%;\r\n        background: #fff;\r\n        padding: 15px 30px;\r\n        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n        z-index: 1000;\r\n        transition: all 0.3s ease;\r\n      }\r\n\r\n      .nav-container {\r\n        max-width: 1200px;\r\n        margin: 0 auto;\r\n        display: flex;\r\n        justify-content: space-between;\r\n        align-items: center;\r\n      }\r\n\r\n      .logo {\r\n        display: flex;\r\n        align-items: center;\r\n        gap: 10px;\r\n      }\r\n\r\n      .logo img {\r\n        width: 40px;\r\n        height: 40px;\r\n        transition: transform 0.3s ease;\r\n      }\r\n\r\n      .logo img:hover {\r\n        transform: scale(1.1);\r\n      }\r\n\r\n      .logo span {\r\n        font-size: 24px;\r\n        font-weight: bold;\r\n        color: #2c3e50;\r\n      }\r\n\r\n      .nav-menu {\r\n        display: flex;\r\n        gap: 20px;\r\n      }\r\n\r\n      .nav-menu a {\r\n        text-decoration: none;\r\n        color: #2c3e50;\r\n        font-weight: 500;\r\n        padding: 8px 15px;\r\n        position: relative;\r\n        transition: all 0.3s ease;\r\n        display: flex;\r\n        align-items: center;\r\n        gap: 8px;\r\n      }\r\n\r\n      .nav-menu a:hover {\r\n        color: #3498db;\r\n      }\r\n\r\n      .nav-menu a::after {\r\n        content: \"\";\r\n        position: absolute;\r\n        width: 0;\r\n        height: 2px;\r\n        bottom: 0;\r\n        left: 0;\r\n        background: #3498db;\r\n        transition: width 0.3s ease;\r\n      }\r\n\r\n      .nav-menu a:hover::after {\r\n        width: 100%;\r\n      }\r\n\r\n      .menu-toggle {\r\n        display: none;\r\n        font-size: 24px;\r\n        cursor: pointer;\r\n        color: #2c3e50;\r\n        transition: transform 0.3s ease;\r\n      }\r\n\r\n      .menu-toggle:hover {\r\n        transform: rotate(90deg);\r\n      }\r\n\r\n      /* Sections */\r\n      .section {\r\n        padding: 80px 20px;\r\n        max-width: 1200px;\r\n        margin: 0 auto;\r\n        opacity: 0;\r\n        transform: translateY(50px);\r\n        transition: all 0.6s ease;\r\n      }\r\n\r\n      .section.visible {\r\n        opacity: 1;\r\n        transform: translateY(0);\r\n      }\r\n\r\n      .hero {\r\n        height: 100vh;\r\n        background: url(\"https://media.istockphoto.com/id/1211101154/photo/a-refugee-homeless-child-standing-in-a-dark-room-with-sad-expression.jpg?s=612x612&w=0&k=20&c=6IHFN8mT39OAFVz_Phyuf8Ib7ITsWyK_rhqGUTAOWGw=\")\r\n          no-repeat center/cover;\r\n        display: flex;\r\n        align-items: center;\r\n        justify-content: center;\r\n        text-align: center;\r\n        color: white;\r\n      }\r\n\r\n      .hero h1 {\r\n        font-size: 48px;\r\n        margin-bottom: 20px;\r\n        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);\r\n      }\r\n\r\n      .hero p {\r\n        font-size: 20px;\r\n        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);\r\n      }\r\n\r\n      .btn {\r\n        padding: 12px 30px;\r\n        background: #3498db;\r\n        color: white;\r\n        text-decoration: none;\r\n        border-radius: 25px;\r\n        transition: all 0.3s ease;\r\n      }\r\n\r\n      .btn:hover {\r\n        background: #2980b9;\r\n        transform: translateY(-2px);\r\n        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);\r\n      }\r\n\r\n      .card {\r\n        background: #fff;\r\n        border-radius: 10px;\r\n        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);\r\n        overflow: hidden;\r\n        transition: transform 0.3s ease;\r\n      }\r\n\r\n      .card:hover {\r\n        transform: translateY(-10px);\r\n      }\r\n\r\n      .card img {\r\n        width: 100%;\r\n        height: 200px;\r\n        object-fit: cover;\r\n      }\r\n\r\n      /* Advanced Footer Styles */\r\n      .footer {\r\n        background: linear-gradient(135deg, #2c3e50 0%, #1a252f 100%);\r\n        color: white;\r\n        padding: 60px 20px 20px;\r\n        position: relative;\r\n        overflow: hidden;\r\n      }\r\n\r\n      .footer::before {\r\n        content: \"\";\r\n        position: absolute;\r\n        top: -50%;\r\n        left: -50%;\r\n        width: 200%;\r\n        height: 200%;\r\n        background: rgba(255, 255, 255, 0.05);\r\n        transform: rotate(30deg);\r\n        pointer-events: none;\r\n      }\r\n\r\n      .footer-container {\r\n        max-width: 1200px;\r\n        margin: 0 auto;\r\n        display: grid;\r\n        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));\r\n        gap: 40px;\r\n        position: relative;\r\n        z-index: 1;\r\n      }\r\n\r\n      .footer-section {\r\n        padding: 20px;\r\n      }\r\n\r\n      .footer-section h3 {\r\n        color: #3498db;\r\n        margin-bottom: 20px;\r\n        position: relative;\r\n        padding-bottom: 10px;\r\n      }\r\n\r\n      .footer-section h3::after {\r\n        content: \"\";\r\n        position: absolute;\r\n        width: 50px;\r\n        height: 2px;\r\n        background: #3498db;\r\n        bottom: 0;\r\n        left: 0;\r\n      }\r\n\r\n      .footer-section p,\r\n      .footer-section ul {\r\n        color: #ecf0f1;\r\n        line-height: 1.6;\r\n      }\r\n\r\n      .footer-section ul {\r\n        list-style: none;\r\n      }\r\n\r\n      .footer-section ul li {\r\n        margin: 10px 0;\r\n      }\r\n\r\n      .footer-section a {\r\n        color: #ecf0f1;\r\n        text-decoration: none;\r\n        transition: all 0.3s ease;\r\n      }\r\n\r\n      .footer-section a:hover {\r\n        color: #3498db;\r\n        padding-left: 5px;\r\n      }\r\n\r\n      .social-icons {\r\n        display: flex;\r\n        gap: 15px;\r\n        margin-top: 20px;\r\n      }\r\n\r\n      .social-icons a {\r\n        font-size: 24px;\r\n        color: #ecf0f1;\r\n        transition: all 0.3s ease;\r\n      }\r\n\r\n      .social-icons a:hover {\r\n        color: #3498db;\r\n        transform: translateY(-5px) rotate(10deg);\r\n      }\r\n\r\n      .footer-bottom {\r\n        text-align: center;\r\n        padding: 20px 0;\r\n        margin-top: 40px;\r\n        background: rgba(0, 0, 0, 0.2);\r\n        position: relative;\r\n        z-index: 1;\r\n      }\r\n\r\n      .footer-bottom p {\r\n        font-size: 14px;\r\n        color: #bdc3c7;\r\n      }\r\n\r\n      /* Responsive Design */\r\n      @media (max-width: 768px) {\r\n        .menu-toggle {\r\n          display: block;\r\n        }\r\n\r\n        .nav-menu {\r\n          position: fixed;\r\n          top: 70px;\r\n          left: -100%;\r\n          width: 100%;\r\n          height: calc(100vh - 70px);\r\n          background: #fff;\r\n          flex-direction: column;\r\n          padding: 20px;\r\n          transition: left 0.3s ease;\r\n          z-index: 1001;\r\n        }\r\n\r\n        .nav-menu.active {\r\n          left: 0;\r\n        }\r\n\r\n        .hero h1 {\r\n          font-size: 2rem;\r\n        }\r\n\r\n        .footer-container {\r\n          grid-template-columns: 1fr;\r\n          text-align: center;\r\n        }\r\n\r\n        .footer-section h3::after {\r\n          left: 50%;\r\n          transform: translateX(-50%);\r\n        }\r\n\r\n        .social-icons {\r\n          justify-content: center;\r\n        }\r\n      }\r\n    </style>\r\n  </head>\r\n  <body>\r\n    <!-- Navbar with Icons -->\r\n    <nav class=\"navbar\" role=\"navigation\">\r\n      <div class=\"nav-container\">\r\n        <div class=\"logo\">\r\n          <img\r\n            src=\"https://img.freepik.com/premium-vector/circle-with-people-holding-hands-with-words-people-middle_1246656-3892.jpg?ga=GA1.1.106639856.1743047039&semt=ais_hybrid&w=740\"\r\n            alt=\"Hope NGO Logo\"\r\n            loading=\"lazy\"\r\n          />\r\n          <span>Hope NGO</span>\r\n        </div>\r\n        <div class=\"menu-toggle\">\r\n          <i class=\"fas fa-bars\"></i>\r\n        </div>\r\n        <div class=\"nav-menu\">\r\n          <a href=\"#home\"><i class=\"fas fa-home\"></i> Home</a>\r\n          <a href=\"#about\"><i class=\"fas fa-info-circle\"></i> About Us</a>\r\n          <a href=\"#programs\"\r\n            ><i class=\"fas fa-project-diagram\"></i> Programs</a\r\n          >\r\n          <a href=\"#impact\"><i class=\"fas fa-chart-line\"></i> Our Impact</a>\r\n          <a href=\"#donate\"><i class=\"fas fa-donate\"></i> Donate</a>\r\n        </div>\r\n      </div>\r\n    </nav>\r\n\r\n    <!-- Sections -->\r\n    <section id=\"home\" class=\"section hero\">\r\n      <div>\r\n        <h1>Transforming Lives Together</h1>\r\n        <p>Join us in making a positive impact worldwide</p>\r\n        <a href=\"#donate\" class=\"btn\">Support Us</a>\r\n      </div>\r\n    </section>\r\n\r\n    <section id=\"about\" class=\"section\">\r\n      <h2>About Us</h2>\r\n      <p style=\"margin: 20px 0\">\r\n        We are a dedicated NGO committed to sustainable development and\r\n        humanitarian aid.\r\n      </p>\r\n      <div\r\n        style=\"\r\n          display: grid;\r\n          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));\r\n          gap: 20px;\r\n        \"\r\n      >\r\n        <div class=\"card\">\r\n          <img\r\n            src=\"https://img.freepik.com/free-photo/group-people-holding-globe-overhead_23-2147831630.jpg?ga=GA1.1.106639856.1743047039&semt=ais_hybrid&w=740\"\r\n            alt=\"Group holding globe representing our mission\"\r\n            loading=\"lazy\"\r\n          />\r\n          <div style=\"padding: 20px\">\r\n            <h3>Our Mission</h3>\r\n            <p>Empowering communities through sustainable solutions.</p>\r\n          </div>\r\n        </div>\r\n        <div class=\"card\">\r\n          <img\r\n            src=\"https://media.istockphoto.com/id/1182934055/photo/pleased-proud-asian-young-businesswoman-get-team-appreciation-support-applause.jpg?s=612x612&w=0&k=20&c=pr4tRXT5LtFfp-KoFTER-Je_ja3tYd8ieeLJJrXbEho=\"\r\n            alt=\"Team celebrating our vision\"\r\n            loading=\"lazy\"\r\n          />\r\n          <div style=\"padding: 20px\">\r\n            <h3>Our Vision</h3>\r\n            <p>A world where everyone thrives with dignity.</p>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </section>\r\n\r\n    <section id=\"programs\" class=\"section\" style=\"background: #f9f9f9\">\r\n      <h2>Our Programs</h2>\r\n      <div\r\n        style=\"\r\n          display: grid;\r\n          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));\r\n          gap: 20px;\r\n          margin-top: 30px;\r\n        \"\r\n      >\r\n        <div class=\"card\">\r\n          <img\r\n            src=\"https://img.freepik.com/free-photo/portrait-cheerful-young-girl-holding-books_171337-1639.jpg?ga=GA1.1.106639856.1743047039&semt=ais_hybrid&w=740\"\r\n            alt=\"Child with books for education program\"\r\n            loading=\"lazy\"\r\n          />\r\n          <div style=\"padding: 20px\">\r\n            <h3>Education</h3>\r\n            <p>Providing quality education to underprivileged children.</p>\r\n          </div>\r\n        </div>\r\n        <div class=\"card\">\r\n          <img\r\n            src=\"https://img.freepik.com/free-photo/close-up-medical-team-ready-work_23-2149152537.jpg?ga=GA1.1.106639856.1743047039&semt=ais_hybrid&w=740\"\r\n            alt=\"Medical team for healthcare program\"\r\n            loading=\"lazy\"\r\n          />\r\n          <div style=\"padding: 20px\">\r\n            <h3>Healthcare</h3>\r\n            <p>Delivering essential medical services.</p>\r\n          </div>\r\n        </div>\r\n        <div class=\"card\">\r\n          <img\r\n            src=\"https://img.freepik.com/free-photo/green-world-with-tree-background_1048-1484.jpg?ga=GA1.1.106639856.1743047039&semt=ais_hybrid&w=740\"\r\n            alt=\"Tree representing environmental program\"\r\n            loading=\"lazy\"\r\n          />\r\n          <div style=\"padding: 20px\">\r\n            <h3>Environment</h3>\r\n            <p>Promoting sustainable environmental practices.</p>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </section>\r\n\r\n    <section id=\"impact\" class=\"section\">\r\n      <h2>Our Impact</h2>\r\n      <div\r\n        style=\"\r\n          display: flex;\r\n          flex-wrap: wrap;\r\n          gap: 40px;\r\n          justify-content: center;\r\n          margin-top: 30px;\r\n        \"\r\n      >\r\n        <div style=\"text-align: center\">\r\n          <h3 style=\"font-size: 36px; color: #3498db\">50K+</h3>\r\n          <p>Lives Touched</p>\r\n        </div>\r\n        <div style=\"text-align: center\">\r\n          <h3 style=\"font-size: 36px; color: #3498db\">100+</h3>\r\n          <p>Projects Completed</p>\r\n        </div>\r\n        <div style=\"text-align: center\">\r\n          <h3 style=\"font-size: 36px; color: #3498db\">25</h3>\r\n          <p>Countries Served</p>\r\n        </div>\r\n      </div>\r\n    </section>\r\n\r\n    <section\r\n      id=\"donate\"\r\n      class=\"section\"\r\n      style=\"background: #f9f9f9; text-align: center\"\r\n    >\r\n      <h2>Make a Donation</h2>\r\n      <p\r\n        style=\"\r\n          margin: 20px 0;\r\n          max-width: 600px;\r\n          margin-left: auto;\r\n          margin-right: auto;\r\n        \"\r\n      >\r\n        Your support helps us continue our mission. Every little bit counts!\r\n      </p>\r\n      <a href=\"/donate-now\" class=\"btn\">Donate Now</a>\r\n    </section>\r\n\r\n    <!-- Advanced Footer -->\r\n    <footer class=\"footer\">\r\n      <div class=\"footer-container\">\r\n        <div class=\"footer-section\">\r\n          <h3>About Us</h3>\r\n          <p>\r\n            We are a dedicated NGO working towards sustainable development and\r\n            humanitarian aid across the globe.\r\n          </p>\r\n        </div>\r\n        <div class=\"footer-section\">\r\n          <h3>Quick Links</h3>\r\n          <ul>\r\n            <li><a href=\"#home\">Home</a></li>\r\n            <li><a href=\"#about\">About</a></li>\r\n            <li><a href=\"#programs\">Programs</a></li>\r\n            <li><a href=\"#impact\">Impact</a></li>\r\n            <li><a href=\"#donate\">Donate</a></li>\r\n          </ul>\r\n        </div>\r\n        <div class=\"footer-section\">\r\n          <h3>Contact Us</h3>\r\n          <ul>\r\n            <li>\r\n              Email: <a href=\"mailto:info@hopengo.org\">info@hopengo.org</a>\r\n            </li>\r\n            <li>Phone: <a href=\"tel:+1234567890\">+1 234 567 890</a></li>\r\n            <li>Address: 123 Hope Street, NY</li>\r\n          </ul>\r\n        </div>\r\n        <div class=\"footer-section\">\r\n          <h3>Follow Us</h3>\r\n          <div class=\"social-icons\">\r\n            <a href=\"#\" aria-label=\"Facebook\"\r\n              ><i class=\"fab fa-facebook-f\"></i\r\n            ></a>\r\n            <a href=\"#\" aria-label=\"Twitter\"><i class=\"fab fa-twitter\"></i></a>\r\n            <a href=\"#\" aria-label=\"Instagram\"\r\n              ><i class=\"fab fa-instagram\"></i\r\n            ></a>\r\n            <a href=\"#\" aria-label=\"LinkedIn\"\r\n              ><i class=\"fab fa-linkedin-in\"></i\r\n            ></a>\r\n          </div>\r\n        </div>\r\n      </div>\r\n      <div class=\"footer-bottom\">\r\n        <p>\r\n          Â© <span id=\"year\"></span> Hope NGO. All Rights Reserved. | Designed\r\n          with\r\n          <i class=\"fas fa-heart\" style=\"color: #e74c3c\"></i>\r\n        </p>\r\n      </div>\r\n    </footer>\r\n\r\n    <script>\r\n      // Navbar functionality\r\n      const menuToggle = document.querySelector(\".menu-toggle\");\r\n      const navMenu = document.querySelector(\".nav-menu\");\r\n      const navLinks = document.querySelectorAll(\".nav-menu a\");\r\n\r\n      menuToggle.addEventListener(\"click\", () => {\r\n        navMenu.classList.toggle(\"active\");\r\n        const isOpen = navMenu.classList.contains(\"active\");\r\n        menuToggle.innerHTML = isOpen\r\n          ? '<i class=\"fas fa-times\"></i>'\r\n          : '<i class=\"fas fa-bars\"></i>';\r\n      });\r\n\r\n      navLinks.forEach((link) => {\r\n        link.addEventListener(\"click\", (e) => {\r\n          e.preventDefault(); // Prevent default navigation\r\n          navMenu.classList.remove(\"active\");\r\n          menuToggle.innerHTML = '<i class=\"fas fa-bars\"></i>';\r\n          const sectionId = link.getAttribute(\"href\").substring(1);\r\n          const section = document.getElementById(sectionId);\r\n          if (section) {\r\n            if (\"scrollBehavior\" in document.documentElement.style) {\r\n              section.scrollIntoView({ behavior: \"smooth\" });\r\n            } else {\r\n              window.scrollTo(0, section.offsetTop); // Fallback for older browsers\r\n            }\r\n          } else {\r\n            console.error(`Section with ID \"${sectionId}\" not found`);\r\n          }\r\n        });\r\n      });\r\n\r\n      // Scroll animation for sections\r\n      const sections = document.querySelectorAll(\".section\");\r\n      const observer = new IntersectionObserver(\r\n        (entries) => {\r\n          entries.forEach((entry) => {\r\n            if (entry.isIntersecting) {\r\n              entry.target.classList.add(\"visible\");\r\n            }\r\n          });\r\n        },\r\n        { threshold: 0.3 },\r\n      );\r\n\r\n      sections.forEach((section) => observer.observe(section));\r\n\r\n      // Navbar scroll effect\r\n      window.addEventListener(\"scroll\", () => {\r\n        const navbar = document.querySelector(\".navbar\");\r\n        if (window.scrollY > 50) {\r\n          navbar.style.padding = \"10px 30px\";\r\n          navbar.style.background = \"rgba(255, 255, 255, 0.95)\";\r\n        } else {\r\n          navbar.style.padding = \"15px 30px\";\r\n          navbar.style.background = \"#fff\";\r\n        }\r\n      });\r\n\r\n      // Dynamic footer year\r\n      document.getElementById(\"year\").textContent = new Date().getFullYear();\r\n\r\n      // Ensure menu icon resets on page load\r\n      window.addEventListener(\"load\", () => {\r\n        if (!navMenu.classList.contains(\"active\")) {\r\n          menuToggle.innerHTML = '<i class=\"fas fa-bars\"></i>';\r\n        }\r\n      });\r\n    </script>\r\n  </body>\r\n</html>\r\n"
